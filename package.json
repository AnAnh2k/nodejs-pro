{
  "dependencies": {
    "dotenv": "16.4.7",
    "ejs": "3.1.10",
    "express": "5.0.1",
    "mysql2": "3.12.0"
  },
  "devDependencies": {
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.0",
    "@types/node": "22.10.7",
    "nodemon": "3.1.9",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "kill-port": "2.0.1"            
  },
  "main": "dist/app.js",
  "scripts": {
    "predev": "kill-port 8080",     
    "dev": "nodemon",
    "start": "node dist/app.js",
    "start:debug": "nodemon --inspect=9229 -e ts,ejs --exec node -r ts-node/register -r tsconfig-paths/register ./src/app.ts"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,ejs",                
    "ignore": ["node_modules"],
    "exec": "ts-node -r tsconfig-paths/register ./src/app.ts",
    "signal": "SIGTERM",            
    "legacyWatch": true             
  }
}
